{
    "name": "crawlflow/crawlflow",
    "description": "A powerful WordPress plugin for data migration and web crawling using Rake 2.0 framework",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Puleeno Nguyen",
            "email": "puleeno@gmail.com",
            "homepage": "https://github.com/puleeno"
        }
    ],
    "require": {
        "php": ">=8.1",
        "monolog/monolog": "^3.0",
        "psr/log": "^3.0",
        "illuminate/container": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "CrawlFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CrawlFlow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "echo 'CrawlFlow plugin installed successfully!'"
        ],
        "post-update-cmd": [
            "echo 'CrawlFlow plugin updated successfully!'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
